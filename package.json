{
    "name": "typescript-module-indexed",
    "displayName": "typescript-module-indexed",
    "description": "To create index.ts and a associated module file file when creating a new typescript module, as a folder in vs code",
    "version": "0.0.2",
    "publisher": "tejasp",
    "repository": "https://github.com/tpar/typescript-module-indexed",
    "keywords": [
        "typescript", "file", "utility", "typescript-index", "index"
    ],
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:New.Ts.Module",
        "onCommand:New.Ts.Module.Custom"

    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
        {
            "command": "New.Ts.Module",
            "title": "New Typescript Module"
        }, 
        {
            "command": "New.Ts.Module.Custom",
            "title": "New Typescript Custom Module"
        }
        ],
        "menus":{
            "explorer/context": [
                {
                    "when": "explorerResourceIsFolder",
                    "command": "New.Ts.Module",
                    "group": "custom"
                },
                {
                    "when": "explorerResourceIsFolder",
                    "command": "New.Ts.Module.Custom",
                    "group": "custom"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}